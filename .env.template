NEXT_PUBLIC_LEGEND_SATIVA_COLOR=#ff6633
NEXT_PUBLIC_LEGEND_INDICA_COLOR=#38b24f

# Price Tier Labels
NEXT_PUBLIC_TIER0_LABEL=1PC
NEXT_PUBLIC_TIER1_LABEL=1G
NEXT_PUBLIC_TIER2_LABEL=5G+
