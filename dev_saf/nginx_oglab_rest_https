server {
    # Прослушиваем HTTPS
   listen 443 ssl default_server;
    server_name oglab.com;

    # Пути к SSL сертификатам
    ssl_certificate /etc/letsencrypt/live/oglab.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/oglab.com/privkey.pem;

    # Заголовки безопасности
    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-XSS-Protection "1; mode=block";
    add_header X-Content-Type-Options "nosniff";

    # Корневая директория сайта
    root /var/www/oglab_site;
    index index.html index.htm index.php;
    charset utf-8;

    # Конфигурация для API
    location /backend {
        alias /var/www/oglab_site/api/public;
        try_files $uri $uri/ @backend;
        location ~ \.php$ {
            include fastcgi_params;
            fastcgi_param SCRIPT_FILENAME $request_filename;
            fastcgi_pass unix:/run/php/php8.1-fpm.sock;
        }
    }

    location @backend {
        rewrite ^/backend/(.*)$ /backend/index.php?/$1 last;
    }

    # Проксирование для админки
    location /admin {
        proxy_pass http://localhost:3002;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # Проксирование для магазина
    location /shop {
        proxy_pass http://localhost:3003;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # Обработка PHP
    location ~ \.php$ {
        fastcgi_pass unix:/run/php/php8.1-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        include fastcgi_params;
    }

    # Запрет доступа к скрытым файлам и директориям
    location ~ /\.(?!well-known).* {
        deny all;
    }

    # Обработка ошибок
    error_page 404 /index.php;
}

# Редирект HTTP трафика на HTTPS
server {
    listen 80;
    server_name oglab.com;
    return 301 https://$host$request_uri;
}
